{
  "title": "Kafka Topics (Throughput)",
  "uid": "kafka-topics-overview",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "custom",
        "name": "kafka_job_name",
        "query": "kafka-brokers",
        "current": {
          "text": "kafka-brokers",
          "value": "kafka-brokers"
        },
        "options": [
          {
            "text": "kafka-brokers",
            "value": "kafka-brokers"
          }
        ]
      },
      {
        "type": "query",
        "name": "topic",
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "query": "label_values(kafka_server_brokertopicmetrics_messagesin_total{job=\"$kafka_job_name\"}, topic)",
        "refresh": 1,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "includeAll": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Messages In /s by topic",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum by (topic)(rate(kafka_server_brokertopicmetrics_messagesin_total{job=\"$kafka_job_name\", topic!~\"__.*\"}[1m]))",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Bytes In /s (top 10 topics)",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (topic)(rate(kafka_server_brokertopicmetrics_bytesin_total{job=\"$kafka_job_name\", topic!~\"__.*\"}[1m])))",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Bytes Out /s (top 10 topics)",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (topic)(rate(kafka_server_brokertopicmetrics_bytesout_total{job=\"$kafka_job_name\", topic!~\"__.*\"}[1m])))",
          "legendFormat": ""
        }
      ]
    }
  ]
}