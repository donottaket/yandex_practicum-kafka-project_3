{
  "title": "Kafka Connect (JMX)",
  "uid": "kafka-connect-jmx",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "custom",
        "name": "kafka_job_name",
        "query": "kafka-connect",
        "current": {
          "text": "kafka-connect",
          "value": "kafka-connect"
        },
        "options": [
          {
            "text": "kafka-connect",
            "value": "kafka-connect"
          }
        ]
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Connectors",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(kafka_connect_connect_worker_metrics_connector_count{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Tasks",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(kafka_connect_connect_worker_metrics_task_count{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Rebalances (5m rate)",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_connect_connect_worker_metrics_rebalance_total{job=\"$kafka_job_name\"}[5m]))"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Rebalance avg time (ms)",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "avg(kafka_connect_connect_worker_metrics_rebalance_avg_time_ms{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "timeseries",
      "title": "Source records polled /s",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_connect_source_task_metrics_source_record_poll_total{job=\"$kafka_job_name\"}[1m]))",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Sink records send /s",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_connect_sink_task_metrics_sink_record_send_total{job=\"$kafka_job_name\"}[1m]))",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Task status changes (success/failure) /s",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_connect_connect_worker_metrics_task_startup_success_total{job=\"$kafka_job_name\"}[5m]))",
          "legendFormat": "Task startup success/s"
        },
        {
          "expr": "sum(rate(kafka_connect_connect_worker_metrics_task_startup_failure_total{job=\"$kafka_job_name\"}[5m]))",
          "legendFormat": "Task startup failure/s"
        }
      ]
    }
  ]
}