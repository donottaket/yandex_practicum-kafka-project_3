{
  "title": "Kafka Consumer Lag",
  "uid": "kafka-lag",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "custom",
        "name": "kafka_job_name",
        "query": "kafka-exporter",
        "current": {
          "text": "kafka-exporter",
          "value": "kafka-exporter"
        },
        "options": [
          {
            "text": "kafka-exporter",
            "value": "kafka-exporter"
          }
        ]
      },
      {
        "type": "query",
        "name": "consumergroup",
        "datasource": {
          "type": "prometheus",
          "uid": "PBFA97CFB590B2093"
        },
        "query": "label_values(kafka_consumergroup_lag{job=\"$kafka_job_name\"}, consumergroup)",
        "refresh": 1,
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "includeAll": true
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Groups discovered",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "count(count by (consumergroup) (kafka_consumergroup_lag{job=\"$kafka_job_name\"}))"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Total lag (all groups)",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(kafka_consumergroup_lag{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "timeseries",
      "title": "Lag by topic (selected group(s))",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum by (topic) (kafka_consumergroup_lag{job=\"$kafka_job_name\", consumergroup=~\"$consumergroup\"})",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top 10 partitions by lag",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (topic, partition) (kafka_consumergroup_lag{job=\"$kafka_job_name\", consumergroup=~\"$consumergroup\"}))",
          "legendFormat": ""
        }
      ]
    }
  ]
}