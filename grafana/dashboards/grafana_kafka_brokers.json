{
  "title": "Kafka Brokers (JMX)",
  "uid": "kafka-brokers-jmx",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "custom",
        "name": "kafka_job_name",
        "query": "kafka-brokers",
        "current": {
          "text": "kafka-brokers",
          "value": "kafka-brokers"
        },
        "options": [
          {
            "text": "kafka-brokers",
            "value": "kafka-brokers"
          }
        ]
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Under-replicated partitions",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(kafka_server_replicamanager_underreplicatedpartitions{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Offline partitions",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(kafka_controller_kafkacontroller_offlinepartitionscount{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Active controllers",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(kafka_controller_kafkacontroller_activecontrollercount{job=\"$kafka_job_name\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "colorMode": "value"
      }
    },
    {
      "type": "timeseries",
      "title": "Messages In /s (by broker)",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum by (instance) (rate(kafka_server_brokertopicmetrics_messagesin_total{job=\"$kafka_job_name\"}[1m]))",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Bytes In / Out /s",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_server_brokertopicmetrics_bytesin_total{job=\"$kafka_job_name\"}[1m]))",
          "legendFormat": "BytesIn/s"
        },
        {
          "expr": "sum(rate(kafka_server_brokertopicmetrics_bytesout_total{job=\"$kafka_job_name\"}[1m]))",
          "legendFormat": "BytesOut/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RequestHandler Idle % (avg)",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "avg(100 * kafka_server_kafkarequesthandlerpool_requesthandleravgidlepercent_percent{job=\"$kafka_job_name\"})",
          "legendFormat": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "ISR shrinks/expands",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_controller_controllerstats_isrshrinks_total{job=\"$kafka_job_name\"}[5m]))",
          "legendFormat": "ISR shrinks/s"
        },
        {
          "expr": "sum(rate(kafka_controller_controllerstats_isrexpands_total{job=\"$kafka_job_name\"}[5m]))",
          "legendFormat": "ISR expands/s"
        }
      ]
    }
  ]
}